<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">

        <com.gobox.core.ui.GoButton
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:text="Button我15121"
            app:go_icon_size="42dp"
            android:drawableLeft="@drawable/ic_tick_circle"/>
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:text="確定"
            app:go_active_text_color="@color/white"
            app:go_reverse_color="true"/>
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:paddingHorizontal="12dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableLeft="@drawable/ic_tick_circle"
            app:go_active="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gobox.core.ui.GoButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_tick_circle"
                android:text="Button"
                android:textSize="23sp"
                app:go_active_background_color="@android:color/holo_blue_dark" />

            <com.gobox.core.ui.GoButton
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:text="確定"
                app:go_active_text_color="@color/white"
                app:go_reverse_color="true"/>
            <com.gobox.core.ui.GoButton
                android:id="@+id/btn_tips_10"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:textSize="18sp"
                android:text="+10"
                app:go_active="false"
                app:go_inactive_background_color="@color/white"
                app:go_inactive_text_color="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="Buttona我15121"
            android:drawableLeft="@drawable/ic_tick_circle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:text="我2321141223123115121E12H14D3414h"
            android:drawableLeft="@drawable/ic_tick_circle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:text="我a2321141223123115121E12H14D3414h"
            android:drawableLeft="@drawable/ic_tick_circle"
            app:go_radius="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">

        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableTop="@drawable/ic_tick_circle"
            app:go_active="false"
            app:go_icon_size="32dp"/>
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableBottom="@drawable/ic_tick_circle"
            app:go_active="false"/>
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableTop="@drawable/ic_tick_circle"
            app:go_active="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black">

        <com.gobox.core.ui.GoButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@drawable/ic_tick_circle"
            app:go_active="false"/>
        <com.gobox.core.ui.GoButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="18sp"
            android:text="確定叫車"
            android:drawableLeft="@drawable/ic_tick_circle"
            android:drawableRight="@drawable/ic_tick_circle"
            app:go_active="false"/>
    </LinearLayout>

</LinearLayout>